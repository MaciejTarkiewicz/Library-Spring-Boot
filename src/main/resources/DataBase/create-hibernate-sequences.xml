    <changeSet author="mtarkiewicz" id="dodanie-hibernate-sequence">
        <comment>dodanie hibernate sequence</comment>
        <sql>CREATE SEQUENCE hibernate_sequence START 5 INCREMENT 1;
            ALTER SEQUENCE hibernate_sequence
            OWNER TO hoteluser;
        </sql>
    </changeSet>

    <changeSet author="mtarkiewicz" id="edycja-tabeli-room">
        <comment>edycja tabeli library</comment>
        <sql>
            ALTER TABLE room ALTER COLUMN id SET DEFAULT nextval('hibernate_sequence');
        </sql>
    </changeSet>

</databaseChangeLog>